# =====================================================
# CONFIGURAÇÕES DO SERVIDOR
# =====================================================
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# =====================================================
# EVOLUTION API
# =====================================================
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua-chave-api-aqui
INSTANCE_NAME=OSZap

# =====================================================
# OPENAI
# =====================================================
OPENAI_API_KEY=sk-sua-chave-openai-aqui
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =====================================================
# SUPABASE
# =====================================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua-chave-supabase-aqui
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key-aqui

# =====================================================
# CONFIGURAÇÕES DO ASSISTENTE
# =====================================================
# Nome do assistente que aparece nas mensagens
ASSISTANT_NAME=Assistente Virtual

# Tempo máximo para processar mensagem (segundos)
MESSAGE_TIMEOUT=30

# Ignorar mensagens mais antigas que X minutos
MAX_MESSAGE_AGE_MINUTES=5

# Habilitar processamento de áudio
ENABLE_AUDIO_PROCESSING=true

# Habilitar processamento de imagens (requer GPT-4 Vision)
ENABLE_IMAGE_PROCESSING=false

# Habilitar grupos (por padrão desabilitado)
ENABLE_GROUP_MESSAGES=false

# =====================================================
# WEBHOOK
# =====================================================
# URL pública do webhook (para configurar na Evolution API)
WEBHOOK_URL=https://seu-dominio.com/webhook

# Secret para validar webhooks (opcional mas recomendado)
WEBHOOK_SECRET=seu-secret-aqui

# =====================================================
# LOGS E DEBUG
# =====================================================
# Nível de log: debug, info, warn, error
LOG_LEVEL=info

# Salvar logs em arquivo
SAVE_LOGS_TO_FILE=false

# Diretório para logs
LOGS_DIR=./logs

# =====================================================
# CACHE E PERFORMANCE
# =====================================================
# Tempo de cache em memória (minutos)
CONVERSATION_CACHE_TTL=30

# Máximo de mensagens no histórico por conversa
MAX_CONVERSATION_HISTORY=20

# =====================================================
# RECURSOS EXTRAS
# =====================================================
# Diretório temporário para arquivos (PDFs, imagens, etc)
TEMP_DIR=./temp

# Tempo para deletar arquivos temporários (horas)
TEMP_FILES_TTL=24

# =====================================================
# SEGURANÇA
# =====================================================
# Lista de números permitidos (separados por vírgula, vazio = todos)
ALLOWED_NUMBERS=

# Lista de números bloqueados (separados por vírgula)
BLOCKED_NUMBERS=

# =====================================================
# RATE LIMITING
# =====================================================
# Máximo de mensagens por usuário por minuto
MAX_MESSAGES_PER_MINUTE=10

# Tempo de cooldown entre mensagens (milissegundos)
MESSAGE_COOLDOWN_MS=1000

